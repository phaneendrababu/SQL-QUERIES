EXPLICIT CURSOR :

DECLARE
EMPID EMPLOYEES.EMPLOYEE_ID%TYPE;
EMPNAME EMPLOYEES.FIRST_NAME%TYPE;
CURSOR EXP_CURSOR IS
SELECT EMPLOYEE_ID,FIRST_NAME FROM EMPLOYEES;
BEGIN
OPEN EXP_CURSOR;
LOOP
FETCH EXP_CURSOR INTO EMPID,EMPNAME;
EXIT WHEN EXP_CURSOR%ROWCOUNT>50;
DBMS_OUTPUT.PUT_LINE(EMPID||' '||EMPNAME);
END LOOP;
CLOSE EXP_CURSOR;
END;
