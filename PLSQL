BASICS:

DECLARE
A NUMBER(10):=100;
B NUMBER(10):=200;
C NUMBER(10);
BEGIN
/*DBMS_OUTPUT.PUT_LINE('PL/SQL');*/
 DECLARE 
 X NUMBER(10):=10;
 Y NUMBER(10):=20;
 Z NUMBER(10);
 BEGIN
 Z:=X+Y;
 DBMS_OUTPUT.PUT_LINE('SUM OF X+Y='||Z);
 END;
C:=A+B;
DBMS_OUTPUT.PUT_LINE('SUM OF A+B='||C);
END;

LABLES:


<<FIRST>>
DECLARE
A NUMBER(10):=101;
B NUMBER(10):=200;
C NUMBER(10);
BEGIN
 DECLARE
 C CONSTANT VARCHAR(10):='PHANI';
 Z NUMBER(10);
 BEGIN
 Z:=FIRST.A+FIRST.B;
 DBMS_OUTPUT.PUT_LINE('OUTER BLOCK='||Z);
 DBMS_OUTPUT.PUT_LINE(C);
 END;

C:=A+B;
DBMS_OUTPUT.PUT_LINE('SUM OF A+B='||C);
END;


<<FIRST>>
DECLARE
A NUMBER(10):=101;
B NUMBER(10):=200;
C NUMBER(10);
BEGIN
 DECLARE
 C CONSTANT VARCHAR(10):='PHANI';
 Z NUMBER(10);
 BEGIN
 FIRST.C:=FIRST.A+FIRST.B;
 DBMS_OUTPUT.PUT_LINE('OUTER BLOCK='||FIRST.C);
 DBMS_OUTPUT.PUT_LINE(C);
 END;

C:=A+B;
DBMS_OUTPUT.PUT_LINE('SUM OF A+B='||C);
END




SINGLE ROW:
DECLARE
V_EID NUMBER(10);
V_ENAME VARCHAR(50);
V_SAL NUMBER(20); 
BEGIN
SELECT EMPLOYEE_ID,FIRST_NAME,SALARY 
INTO V_EID,V_ENAME,V_SAL 
FROM EMPLOYEES
WHERE EMPLOYEE_ID=105;
DBMS_OUTPUT.PUT_LINE(V_EID||' '||V_ENAME||' '||V_SAL);
END;

USING %TYPE:

DECLARE
V_EID EMPLOYEES.EMPLOYEE_ID%TYPE;
V_ENAME EMPLOYEES.FIRST_NAME%TYPE;
V_SAL EMPLOYEES.SALARY%TYPE; 
BEGIN
SELECT EMPLOYEE_ID,FIRST_NAME,SALARY 
INTO V_EID,V_ENAME,V_SAL 
FROM EMPLOYEES
WHERE EMPLOYEE_ID=105;
DBMS_OUTPUT.PUT_LINE(V_EID||' '||V_ENAME||' '||V_SAL);
END;


USING %ROWTYPE:
DECLARE
EMPL EMPLOYEES%ROWTYPE;
BEGIN
SELECT *
INTO EMPL
FROM EMPLOYEES
WHERE EMPLOYEE_ID=105;
DBMS_OUTPUT.PUT_LINE(EMPL.EMPLOYEE_ID||' '||EMPL.FIRST_NAME||' '||EMPL.SALARY);
END;

CREATING RECORD:
DECLARE
TYPE EMPDET IS RECORD
(EMP_ID NUMBER(10),
 EMP_NAME VARCHAR(50),
 SALARY NUMBER(10)
);
A EMPDET;
BEGIN
SELECT EMPLOYEE_ID,FIRST_NAME,SALARY
INTO A 
FROM EMPLOYEES 
WHERE EMPLOYEE_ID=105;
DBMS_OUTPUT.PUT_LINE(A.EMP_ID||' '||A.EMP_NAME||' '||A.SALARY);
END;

DETAILS OF THE EMPLOYEE WHO EARNS MAXIMUM SALARY:

DECLARE
TYPE EMPDET IS RECORD
(EMP_ID NUMBER(10),
 EMP_NAME VARCHAR(50),
 SALARY NUMBER(10)
);
A EMPDET;
BEGIN
SELECT EMPLOYEE_ID,FIRST_NAME,SALARY
INTO A 
FROM EMPLOYEES 
WHERE SALARY=(SELECT MAX(SALARY) FROM EMPLOYEES);
DBMS_OUTPUT.PUT_LINE(A.EMP_ID||' '||A.EMP_NAME||' '||A.SALARY);
END;



EXCEPTIONS:

DECLARE
V_ID NUMBER(10);
U_ID NUMBER(10);
BEGIN
    SELECT COURSE_ID INTO V_ID FROM COURSE WHERE COURSE_ID=101;
    SELECT EMPLOYEE_ID INTO U_ID FROM EMPLOYEES WHERE DEPARTMENT_ID=100;
EXCEPTION
    WHEN NO_DATA_FOUND THEN
    DBMS_OUTPUT.PUT_LINE('NO RECORDS FOUND');
    WHEN OTHERS THEN
    DBMS_OUTPUT.PUT_LINE('TOO MANY RECORDS FOUND');
END;
